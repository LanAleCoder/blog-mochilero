---
import BaseLayout from './BaseLayout.astro';
import AdPlaceholder from '../components/AdPlaceholder.astro';
import AffiliateWidget from '../components/AffiliateWidget.jsx';
import TableOfContents from '../components/TableOfContents.astro';
import "../styles/global.css";

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    updatedDate?: string;
    heroImage?: string;
    tags: string[];
    destination?: string;
    budget?: number;
    readingTime?: number;
  };
}

const { frontmatter } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage, tags, destination, budget, readingTime } = frontmatter;

const formattedDate = new Date(pubDate).toLocaleDateString('es-GT', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title} description={description} image={heroImage}>
  <article class="max-w-4xl mx-auto px-4 py-8">
    <!-- Breadcrumbs -->
    <nav class="text-sm text-gray-600 mb-6">
      <a href="/" class="hover:text-green-600">Inicio</a> 
      <span class="mx-2">→</span>
      <a href="/blog" class="hover:text-green-600">Blog</a>
      <span class="mx-2">→</span>
      <span class="text-gray-900">{title}</span>
    </nav>

    <!-- Article Header -->
    <header class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 leading-tight">{title}</h1>
      
      <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-6">
        <time datetime={pubDate}>Publicado: {formattedDate}</time>
        {updatedDate && (
          <time datetime={updatedDate}>
            Actualizado: {new Date(updatedDate).toLocaleDateString('es-GT')}
          </time>
        )}
        {readingTime && <span>{readingTime} min de lectura</span>}
        {budget && <span class="bg-green-100 text-green-800 px-2 py-1 rounded">Presupuesto: ${budget}</span>}
      </div>

      <!-- Tags -->
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-6">
          {tags.map(tag => (
            <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">
              #{tag}
            </span>
          ))}
        </div>
      )}

      <!-- Hero Image -->
      {heroImage && (
        <div class="relative mb-8">
          <img 
            src={heroImage} 
            alt={title}
            class="w-full h-64 md:h-96 object-cover rounded-lg shadow-lg"
            loading="lazy"
          />
        </div>
      )}
    </header>

    <!-- Table of Contents -->
    <TableOfContents />

    <!-- Ad Space - Top of article -->
    <AdPlaceholder size="banner" position="article-top" />

    <!-- Article Content -->
    <div class="prose prose-lg max-w-none">
      <slot />
    </div>

    <!-- Affiliate Widget (si hay destino) -->
    {destination && (
      <div class="my-8">
        <AffiliateWidget 
          type="accommodation" 
          destination={destination}
          client:load
        />
      </div>
    )}

    <!-- Ad Space - Bottom of article -->
    <AdPlaceholder size="rectangle" position="article-bottom" />

    <!-- Article Footer -->
    <footer class="mt-12 pt-8 border-t">
      <div class="bg-green-50 p-6 rounded-lg">
        <h3 class="text-lg font-semibold mb-2">¿Te ayudó esta guía?</h3>
        <p class="text-gray-700 mb-4">
          Suscríbete a mi newsletter para recibir más guías como esta y descuentos exclusivos.
        </p>
        <div class="flex gap-2">
          <input 
            type="email" 
            placeholder="tu@email.com"
            class="flex-1 px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
          />
          <button class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition-colors">
            Suscribirse
          </button>
        </div>
      </div>
    </footer>

    <!-- Related Posts -->
    <section class="mt-12">
      <h3 class="text-2xl font-bold mb-6">Te Puede Interesar</h3>
      <!-- Esto se llenará dinámicamente con posts relacionados -->
    </section>
  </article>

  <!-- Affiliate Disclosure -->
  <div class="max-w-4xl mx-auto px-4 py-4">
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 text-sm">
      <strong>Descargo de Responsabilidad:</strong> 
      Este artículo contiene enlaces de afiliados. Si realizas una compra a través de estos enlaces, 
      puedo recibir una pequeña comisión sin costo adicional para ti. Esto me ayuda a mantener este blog 
      y continuar creando contenido útil para viajeros como tú.
    </div>
  </div>
</BaseLayout>
